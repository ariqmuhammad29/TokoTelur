<div class="container mb-5">
    <h4 class="text-dark">Admin</h4>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(admin=> { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-4">
                        <small class="text-warning">Nama</small> <br />
                        <%= admin.nama_admin %>
                    </div>

                    <div class="col-lg-3">
                        <small class="text-warning">Username</small> <br />
                        <%= admin.username %>
                    </div>

                    <div class="col-lg-2">
                        <small class="text-warning">Password</small> <br />
                        <%= admin.password %>
                    </div>

                    
                    <div class="col-lg-2">
                        <small class="text-warning">Action</small> <br />

                        <!-- button edit -->
                        <a href="/admin/edit/<%= admin.id %>">
                            <button class="btn btn-sm btn-primary">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                        <a href="/admin/delete/<%= admin.id %>"
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>

                    </div>
                </div>
            </li>
            <% }) %>
    </ul>

    <!-- button add new data -->
    <a href="/admin/add">
        <button class="btn btn-md btn-warning mb-3">
            Tambah Data
        </button>
    </a>

</div>
